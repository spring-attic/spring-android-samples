<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.springframework.android.showcase"
      android:versionCode="1"
      android:versionName="1.0">

	<uses-sdk android:minSdkVersion="9"></uses-sdk>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application android:label="@string/app_name">
        
        <activity 
        	android:name=".MainActivity"
			android:label="@string/app_name">
			
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <activity
        	android:name=".GoogleSearchActivity" />
                
		<activity
        	android:name=".HttpGetActivity" />
        	
		<activity
        	android:name=".HttpGetJsonActivity" />
        	
		<activity
        	android:name=".HttpGetXmlActivity" />
        	
		<activity
        	android:name=".HttpGetParametersActivity" />
        	
        <activity
        	android:name=".HttpPostActivity" />
        	
        <activity
        	android:name=".HttpPostStringActivity" />
        	
        <activity
        	android:name=".HttpPostJsonXmlActivity" />
        	
        <activity
        	android:name=".HttpPostMultiValueMapActivity" />
        	
       	<activity
        	android:name=".RssActivity" />
        	
        <activity
        	android:name=".RssChannelActivity" />
        
        <activity
        	android:name=".RssSyndFeedActivity" />
        	
       	<activity
        	android:name=".AtomActivity" />
        	
        <activity
        	android:name=".AtomFeedActivity" />
        	
        <activity
        	android:name=".AtomSyndFeedActivity" />
        
        <activity
        	android:name=".TwitterActivity">
        	
        	<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="x-org-springsource-android-showcase" android:host="oauth-response" />
			</intent-filter>
        	
        </activity>
        
        <activity
        	android:name=".TwitterOauthActivity"  
        	android:noHistory="true"
        	android:excludeFromRecents="true" />
        	
        <activity
        	android:name=".TwitterProfileActivity" />
        	
        <activity
        	android:name=".TwitterTimelineActivity" />
        	
        <activity
        	android:name=".TwitterTweetActivity" />
        	
        <activity
        	android:name=".TwitterDirectMessageActivity" />
        	
    </application>

</manifest> 
